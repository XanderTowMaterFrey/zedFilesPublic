// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // theme
  "icon_theme": "Zed (Default)",
  "theme": "Nu Disco With A CHZ-_-STaKe",

  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "preferred_line_length": 180,

  // general settings
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "autosave": "on_focus_change",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "auto_update": true,
  "base_keymap": "SublimeText",
  "vim_mode": true,
  "format_on_save": "off", // cmd + shift + i to format
  "soft_wrap": "editor_width",

  // language settings
  "languages": {
    "JavaScript": {
      "show_whitespaces": "all",
      "format_on_save": "off"
    }
  },

  // The following settings can be overridden for each specific language:
  // enable_language_server
  // ensure_final_newline_on_save
  // format_on_save
  // formatter
  // hard_tabs
  // preferred_line_length
  // remove_trailing_whitespace_on_save
  // show_inline_completions
  // show_whitespaces
  // soft_wrap
  // tab_size
  // use_autoclose
  // always_treat_brackets_as_autoclosed
  // for the git firefly plugin          --- i dont think i need that plugin tbh, i should uninstall it and see if i can still do git stuff

  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    }
  }
}
